<div><%= link_to "new", new_admin_role_path %></div>
<% if @roles.any? %>
  <table>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <% @roles.each do |role| %>
      <tr>
        <td>
          <%= role.id %>
        </td>
        <td>					
          <b><%= role.name %></b>
        </td>
        <td>
          <%= role.remark %>
        </td>
        <td>
          <%= link_to "查看", admin_route(admin_role_path(role)) %>
        </td>
        <td>
          <%= link_to "编辑", admin_route(edit_admin_role_path(role)) %>
        </td>
        <td>
          <%= link_to '删除', admin_role_path(role), :confirm => 'Are you sure?', :method => :delete %>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  角色为空
<% end %>
<div><%= link_to "new", new_admin_role_path %></div>