<%= render :partial => "/admin/overall/partials/side_panel" %>

<div id="main-panel">
  <h1>编辑全局分类</h1>

  <div class="main-options">
    <%= link_to "返回分类列表", admin_route(admin_overall_categories_path) %>
    <%= link_to "返回分类", admin_route(admin_overall_category_path(@overall_category)) %>
    <%= link_to "新建全局分类", admin_route(new_admin_overall_category_path) %>
  </div>

  <div class="main-content">
    <%= form_for([:admin, @overall_category], :html => { :multipart => true }) do |f| %>
      <%= render :partial => 'form', :locals => {:f => f} %>
    <% end %>
  </div>
</div>