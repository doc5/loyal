<%= render :partial => "/admin/overall/partials/side_panel" %>

<div id="main-panel">
  <h1>【全局分类】： <%= @overall_category.name %></h1>

  <div class="main-options">
    <%= link_to "返回分类列表", admin_route(admin_overall_categories_path) %>
    <%= link_to "编辑分类", admin_route(edit_admin_overall_category_path(@overall_category)) %>
    <%= link_to "新建全局分类", admin_route(new_admin_overall_category_path) %>
  </div>

  <div class="main-content">
    <p>
      <b>名称</b><br/>
      <%= @overall_category.name %>
    </p>
    <p>
      <b>标题</b><br/>
      <%= @overall_category.title %>
    </p>
    <p>
      <b>URL-NAME</b><br/>
      <%= @overall_category.url_name %>
    </p>
    <p>
      <b>Flag Name</b><br/>
      <%= @overall_category.flag_name %>
    </p>
    <p>
      <b>position</b><br/>
      <%= @overall_category.position %>
    </p>
    <p>
      <b>lang</b><br/>
      <%= @overall_category.lang %>
    </p>
    <p>
      <b>introduction</b><br/>
      <%= @overall_category.introduction %>
    </p>
    <p>
      <b>description</b><br/>
      <%= @overall_category.description %>
    </p>
  </div>
</div>