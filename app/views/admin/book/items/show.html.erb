<%= render :partial => "/admin/book/partials/side_panel" %>

<div id="main-panel">
  <h1>【图书分类】： <%= @book_item.name %></h1>

  <div class="main-options">
    <%= link_to "返回分类列表", admin_route(admin_book_items_path) %>
    <%= link_to "编辑分类", admin_route(edit_admin_book_item_path(@book_item)) %>
    <%= link_to "新建图书分类", admin_route(new_admin_book_item_path) %>
  </div>

  <div class="main-content">
    <p>
      <b>名称</b><br/>
      <%= @book_item.name %>
    </p>
    <p>
      <b>标题</b><br/>
      <%= @book_item.title %>
    </p>
    <p>
      <b>URL-NAME</b><br/>
      <%= @book_item.url_name %>
    </p>
    <p>
      <b>position</b><br/>
      <%= @book_item.position %>
    </p>
    <p>
      <b>lang</b><br/>
      <%= @book_item.lang %>
    </p>
    <p>
      <b>introduction</b><br/>
      <%= @book_item.introduction %>
    </p>
    <p>
      <b>description</b><br/>
      <%= @book_item.description %>
    </p>
  </div>
</div>