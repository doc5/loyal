<% if @book_category.errors.any? %>
  <div id="error_explanation">
    <h2 id="errorExplanationHeader"><%= t('activerecord.errors.template.header', :count => @book_category.errors.count) %></h2>	
    <ul>
      <% @book_category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <%= f.label :Name %>*<br />
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :Url_name %>*<br />
  <%= f.text_field :url_name %>
</div>

<div class="field">
  <%= f.label :Title %><br />
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :Position %><br />
  <%= f.text_field :position %>
</div>

<div class="field">
  <%= f.label :Introduction %><br />
  <%= f.text_field :introduction %>
</div>

<div class="field">
  <%= f.label :parent_id %><br />	
  <%= f.select :parent_id, 
    nested_set_options(BookCategory, @book_category) {|i| "#{'-' * i.level} #{i.name}" }, 
    {:include_blank => I18n.t('please_select_for_tag')} %>
</div>

<div class="field">
  <%= f.label :avatar %><br />
  <%= f.file_field :avatar %>
</div>

<div class="field">
  <%= f.label :Description %><br />
  <%= f.text_area :description %>
</div>

<div class="actions">
  <%= f.submit %>
</div>