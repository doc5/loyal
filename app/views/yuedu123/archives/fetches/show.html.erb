<div id="main">
  <div id="main-panel">
    <div class="main-info"> 
      <%= render :partial => "/yuedu123/archives/categories/path", :locals => {:include_self => true, :category => @archives_item_fetch.first_category} %>

      <h1>
        <%= @archives_item_fetch.title %>
      </h1>
      <div class="detail-info">
        <%= @archives_item_fetch.display_pubtime %>

        <% @archives_item_fetch.categories.each do |category| %>
          <%= link_to "#{category.name}", 
            archives_route(yuedu123_archives_category_path(:url_name => category.url_name)) %>
        <% end %>

        来源于:网络

        <% if @archives_item_fetch.fetch_author.present? %>
          作者:<%= @archives_item_fetch.fetch_author %>          
        <% end %>        
      </div>
    </div>
    <div class="main-content">
      <div class="content-imgs">
        <%= raw @archives_item_fetch.fetch_images %>
      </div>
      <%= raw @archives_item_fetch.content %>
    </div>

    <div id="share-this" style="height: 40px;">
      <!-- JiaThis Button BEGIN -->
      <div id="ckepop">
        <span class="jiathis_txt">分享到：</span>
        <a class="jiathis_button_qzone">QQ空间</a>
        <a class="jiathis_button_tsina">新浪微博</a>
        <a class="jiathis_button_tqq">腾讯微博</a>
        <a class="jiathis_button_renren">人人网</a>
        <a href="http://www.jiathis.com/share?uid=1575257" class="jiathis jiathis_txt jiathis_separator jtico jtico_jiathis" target="_blank">更多</a>
        <a class="jiathis_counter_style"></a>
      </div>
      <script type="text/javascript">var jiathis_config = {data_track_clickback:true};</script>
      <script type="text/javascript" src="http://v2.jiathis.com/code/jia.js?uid=1575257" charset="utf-8"></script>
      <!-- JiaThis Button END -->
    </div>

    <div class="pre-next-items">        
      上一篇：
      <% if @archives_item_fetch.pre_related_item %>
        <%= link_to "#{@archives_item_fetch.pre_related_item.title}", 
          archives_route(yuedu123_archives_fetch_path(:uuid => @archives_item_fetch.pre_related_item.uuid)) %>
      <% else %>
        没有了
      <% end %>
      下一篇：
      <% if @archives_item_fetch.next_related_item %>
        <%= link_to "#{@archives_item_fetch.next_related_item.title}", 
          archives_route(yuedu123_archives_fetch_path(:uuid => @archives_item_fetch.next_related_item.uuid)) %>
      <% else %>
        没有了
      <% end %>
    </div>
    <%= render :partial => "/yuedu123/archives/fetches/related", :locals => {:item => @archives_item_fetch} %>
    
  </div>


  <div id="side-panel">
    <div class="box">
      <div class="box-title">
        相关文章
      </div>
      <ul class="box-body">
        <% @archives_item_fetch.nearby_related_items(:compare_opts => -1).each do |fetch| %>
          <li><%= link_to "#{fetch.title}", 
              archives_route(yuedu123_archives_fetch_path(:uuid => fetch.uuid)) %></li>
        <% end %>

        <% @archives_item_fetch.nearby_related_items(:compare_opts => 1).each do |fetch| %>
          <li><%= link_to "#{fetch.title}", 
              archives_route(yuedu123_archives_fetch_path(:uuid => fetch.uuid)) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

